
<ul>
 <div class="post">
	<h2>New Post Form</h2> 
	<div class="post"> 
		<form method="POST" action="/posts">
		  <textarea name="body" placeholder="Body" style="width:100%;
  height:100px; font-size:14px;"></textarea>
		  <input type="submit" value="Create Post">
		</form>
	</div>
</div>

<% @posts.each do |post| %>
	<div class="post"> 
		<div class="post-info"> 
			<strong>Posted by:</strong> <%= post.user_id %><p>
		</div> 
	<div class="post"> 
		<strong>Body:</strong> <%= post.body %>
	</div>
	</div>
<% end %>
